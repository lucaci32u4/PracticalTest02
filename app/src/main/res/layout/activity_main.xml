<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnrestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="(Re)Start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l_port" />

    <EditText
        android:id="@+id/l_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="localhost"
        app:layout_constraintStart_toStartOf="@+id/btnrestart"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/l_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="8181"
        app:layout_constraintStart_toStartOf="@+id/l_host"
        app:layout_constraintTop_toBottomOf="@+id/l_host" />

    <Button
        android:id="@+id/go_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Client"
        app:layout_constraintStart_toStartOf="@+id/btnrestart"
        app:layout_constraintTop_toBottomOf="@+id/btnrestart" />

</androidx.constraintlayout.widget.ConstraintLayout>